{
  "compilerOptions": {
    // Enable latest features
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./js",
    "rootDir": "./ts",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "removeComments": true
  }
